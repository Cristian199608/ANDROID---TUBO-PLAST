<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="21dp" >

    <TextView
        android:id="@+id/productos_precios_item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textColor="#424246"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/productos_precios_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="2"
        android:gravity="center"
        android:textColor="#424246"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/productos_precios_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="3"
        android:gravity="center"
        android:textColor="#424246"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/productos_precios_item4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="4"
        android:textColor="#424246"
        android:gravity="center"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/productos_precios_item5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="5"
        android:gravity="center"
        android:textColor="#424246"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/productos_precios_item6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="6"
        android:gravity="center"
        android:textColor="#424246"
        android:textSize="13sp" />

</LinearLayout>