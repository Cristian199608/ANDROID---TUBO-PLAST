<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/black"


    >
    <RelativeLayout
        android:id="@+id/menu_chofer_ly_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:orientation="vertical"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/iv_inicio"
            android:src="@drawable/logo_v5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/txt_sae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="186dp"
            android:layout_toLeftOf="@+id/iv_inicio"
            android:text="@string/lblSAE"
            android:textColor="@color/color_white"
            android:textSize="35sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/txt_te"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_inicio"
            android:layout_marginRight="11dp"
            android:layout_marginTop="4dp"
            android:text="(Sistema"
            android:textColor="@color/color_white"
            android:textSize="29sp"
            android:typeface="normal" />
        <TextView
            android:id="@+id/txt_te1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_inicio"
            android:layout_marginRight="9dp"
            android:layout_marginTop="30dp"
            android:text="de administraciÃ³n"
            android:textColor="@color/color_white"
            android:textSize="29sp"
            android:typeface="normal" />
        <TextView
            android:id="@+id/txt_te2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_inicio"
            android:layout_marginRight="78dp"
            android:layout_marginTop="54dp"
            android:text="Empresarial)"
            android:textColor="@color/color_white"
            android:textSize="29sp"
            android:typeface="normal" />


    </RelativeLayout>

    <View android:id="@+id/view_tipoProducto"
        android:layout_width="wrap_content"
        android:background="@android:color/white"
        android:layout_height="4dp"
        android:layout_below="@+id/menu_chofer_ly_inicio">

    </View>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_below="@+id/view_tipoProducto"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="80dp"
            android:paddingBottom="100dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:id="@+id/menu_chofer_ly_facturas"
                    android:background="@drawable/selector_factura"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:focusable="true"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/menu_chofer_iv_clientes"
                        android:src="@drawable/facturasv3"
                        android:visibility="invisible"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"/>



                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/menu_chofer_iv_clientes"
                        android:layout_alignTop="@+id/menu_chofer_iv_clientes"
                        android:layout_alignRight="@+id/menu_chofer_iv_clientes"
                        android:layout_alignBottom="@+id/menu_chofer_iv_clientes"
                        android:typeface="sans"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Facturas"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_chofer_ly_stock"
                    android:background="@drawable/selector_producto"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:focusable="true"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/menu_chofer_iv_stock"
                        android:visibility="invisible"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/productosv3"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/menu_chofer_iv_stock"
                        android:layout_alignTop="@+id/menu_chofer_iv_stock"
                        android:layout_alignRight="@+id/menu_chofer_iv_stock"
                        android:layout_alignBottom="@+id/menu_chofer_iv_stock"
                        android:typeface="sans"
                        android:textSize="15sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/color_white"
                        android:text="Stock"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/menu_chofer_ly_cobranza"
                    android:background="@drawable/selector_cobranza"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:focusable="true"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/menu_chofer_iv_cobranza"
                        android:visibility="invisible"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:src="@drawable/cobranzav3"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/menu_chofer_iv_cobranza"
                        android:layout_alignTop="@+id/menu_chofer_iv_cobranza"
                        android:layout_alignRight="@+id/menu_chofer_iv_cobranza"
                        android:layout_alignBottom="@+id/menu_chofer_iv_cobranza"
                        android:typeface="sans"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Cobranza"/>

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:id="@+id/menu_chofer_ly_sincronizar"
                    android:background="@drawable/selector_sincronizacion"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:focusable="true"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/menu_chofer_iv_sincronizar"
                        android:visibility="invisible"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/sincronizarv3"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/menu_chofer_iv_sincronizar"
                        android:layout_alignTop="@+id/menu_chofer_iv_sincronizar"
                        android:layout_alignRight="@+id/menu_chofer_iv_sincronizar"
                        android:layout_alignBottom="@+id/menu_chofer_iv_sincronizar"
                        android:typeface="sans"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Sincronizar"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ly_productos"
                    android:visibility="invisible"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_productos"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/productosv3"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_productos"
                        android:layout_alignTop="@+id/iv_productos"
                        android:layout_alignRight="@+id/iv_productos"
                        android:layout_alignBottom="@+id/iv_productos"
                        android:typeface="sans"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Productos"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/ly_estadisticas"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_estadisticas"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/estadistica_v6"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_estadisticas"
                        android:layout_alignTop="@+id/iv_estadisticas"
                        android:layout_alignRight="@+id/iv_estadisticas"
                        android:layout_alignBottom="@+id/iv_estadisticas"
                        android:typeface="sans"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Estadisticas"/>

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:id="@+id/ly_reportes"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_reportes"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/reportesv3"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_reportes"
                        android:layout_alignTop="@+id/iv_reportes"
                        android:layout_alignRight="@+id/iv_reportes"
                        android:layout_alignBottom="@+id/iv_reportes"
                        android:typeface="sans"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Reportes"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ly_cobranza"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_cobranza"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/cobranzav3"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_cobranza"
                        android:layout_alignTop="@+id/iv_cobranza"
                        android:layout_alignRight="@+id/iv_cobranza"
                        android:layout_alignBottom="@+id/iv_cobranza"
                        android:typeface="sans"
                        android:layout_margin="1dp"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Cobranza"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/ly_sincronizar"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_sincronizar"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/sincronizarv3"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_sincronizar"
                        android:layout_alignTop="@+id/iv_sincronizar"
                        android:layout_alignRight="@+id/iv_sincronizar"
                        android:layout_alignBottom="@+id/iv_sincronizar"
                        android:typeface="sans"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Sincronizar"/>

                </RelativeLayout>

            </TableRow>

        </TableLayout>
    </LinearLayout>

</RelativeLayout>