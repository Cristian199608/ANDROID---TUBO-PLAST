<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pedidolyt_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="Cliente: "
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <AutoCompleteTextView
            android:id="@+id/autocomplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="Nombre Cliente"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:typeface="sans" />
    </LinearLayout>

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pedidolyt_head" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:backgroundTint="@color/blue_500"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp" >

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="3dp"
                        android:fillViewport="true" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="N° de Devolución:"
                                    android:textSize="15sp" />

                                <EditText
                                    android:id="@+id/edt_nroPedido"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    android:enabled="false"
                                    android:text="" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Dirección fiscal:"
                                    android:textSize="15sp" />

                                <EditText
                                    android:id="@+id/edt_direccionFiscal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    android:editable="false"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Prioridad:"
                                    android:textSize="15sp" />

                                <Spinner
                                    android:id="@+id/spn_prioridad"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    style="@android:style/Widget.Holo.Light.Spinner"
                                    android:entries="@array/datos_spinner" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Sucursal:"
                                    android:textSize="15sp" />

                                <Spinner
                                    android:id="@+id/spn_sucursal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    style="@android:style/Widget.Holo.Light.Spinner"
                                    android:entries="@array/datos_spinner"
                                    android:prompt="@string/prompt_sucursales"
                                    android:spinnerMode="dialog" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Punto de entrega:"
                                    android:textSize="15sp" />

                                <Spinner
                                    android:id="@+id/spn_puntoEntrega"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    style="@android:style/Widget.Holo.Light.Spinner"
                                    android:entries="@array/datos_spinner"
                                    android:prompt="@string/prompt_puntoEntrega"
                                    android:spinnerMode="dialog" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:text="Recojo:"
                                    android:textSize="15sp" />

                                <RadioGroup
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:orientation="horizontal">
                                    <RadioButton
                                        android:id="@+id/rbtn_interno"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:checked="true"
                                        android:text="Interno"/>
                                    <RadioButton
                                        android:id="@+id/rbtn_externo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:text="Externo"/>
                                    <RadioButton
                                        android:id="@+id/rbtn_vendedor"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:text="Vendedor"/>
                                </RadioGroup>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linear_tipoDocumento"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp"
                                android:visibility="gone"
                                android:paddingTop="5dp" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Tipo documento:"
                                    android:textSize="15sp" />

                                <RadioGroup
                                    android:id="@+id/rGroup_tipoDocumento"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:orientation="horizontal" >

                                    <RadioButton
                                        android:id="@+id/rButton_boleta"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="true"
                                        android:text="Boleta" />

                                    <RadioButton
                                        android:id="@+id/rButton_factura"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Factura" />
                                </RadioGroup>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp"
                                android:visibility="gone"
                                android:paddingTop="5dp" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Moneda:"
                                    android:textSize="15sp" />

                                <RadioGroup
                                    android:id="@+id/rGroup_moneda"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:orientation="horizontal" >

                                    <RadioButton
                                        android:id="@+id/rButton_dolares"
                                        android:checked="true"
                                        android:text="Dolares"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content" />

                                    <RadioButton
                                        android:id="@+id/rButton_soles"
                                        android:text="Soles"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content" />
                                </RadioGroup>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Transportista:"
                                    android:textSize="15sp" />

                                <Spinner
                                    android:id="@+id/spn_transportista"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    style="@android:style/Widget.Holo.Light.Spinner"
                                    android:entries="@array/datos_spinner" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Generar Cambio:"
                                    android:textSize="15sp" />

                                <Spinner
                                    android:id="@+id/spn_generarCambio"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    style="@android:style/Widget.Holo.Light.Spinner"
                                    android:layout_weight="1.5" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="N° Guia del Cliente:"
                                    android:textSize="15sp" />

                                <EditText
                                    android:id="@+id/edt_numeroGuiaCliente"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    android:text="" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1" >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".5"
                                    android:gravity="center_vertical" >

                                    <Button
                                        android:id="@+id/btn_fechaPedido"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableTop="@drawable/fecha_32"
                                        android:text="Fecha"
                                        android:textSize="12sp" />

                                    <EditText
                                        android:id="@+id/edt_fechaPedido"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:editable="false"
                                        android:hint="Fecha recojo" />
                                </LinearLayout>

                                <!--   <LinearLayout
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:layout_weight=".5"
                                     android:gravity="center_vertical" >

                                     <Button
                                         android:id="@+id/btn_horaPedido"
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:drawableTop="@drawable/hora_32"
                                         android:text="Hora"
                                         android:textSize="12sp" />

                                     <EditText
                                         android:id="@+id/edt_horaPedido"
                                         android:layout_width="match_parent"
                                         android:layout_height="wrap_content"
                                         android:editable="false"
                                         android:hint="Hora recojo" />
                                 </LinearLayout>
                                 -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".5"
                                    android:gravity="center_vertical" >


                                    <Spinner
                                        android:id="@+id/spn_turno_entregaDev"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1.5"
                                        style="@android:style/Widget.Holo.Light.Spinner"
                                        android:entries="@array/datos_spinner" />
                                </LinearLayout>

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:clickable="false"
                                    android:editable="false"
                                    android:text="Limite Credito"
                                    android:textSize="15sp" />

                                <EditText
                                    android:id="@+id/edt_limiteCredito"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    android:editable="false"
                                    android:text="" />

                            </LinearLayout>



                            <LinearLayout
                                android:id="@+id/linear_docAdicional"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Doc. Adicional"
                                    android:textSize="15sp" />

                                <EditText
                                    android:id="@+id/edt_docAdicional"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:editable="false"
                                    android:focusable="false" />
                            </LinearLayout>




                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Tipo de Despacho"
                                    android:textSize="15sp" />

                                <Spinner
                                    android:id="@+id/spn_tipoDespacho"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    android:entries="@array/datos_spinner" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linear_obra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Obra:"
                                    android:textSize="15sp" />

                                <Spinner
                                    android:id="@+id/spn_obra"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    android:entries="@array/datos_spinner" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Despacho:"
                                    android:textSize="14sp" />

                                <RadioGroup
                                    android:id="@+id/rGroup_despacho"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:orientation="horizontal" >

                                    <RadioButton
                                        android:id="@+id/rButton_interno"
                                        android:checked="true"
                                        android:text="Interno"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content" />

                                    <RadioButton
                                        android:id="@+id/rButton_externo"
                                        android:text="Externo"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content" />
                                </RadioGroup>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp" >

                                <CheckBox
                                    android:id="@+id/chkBox_embalaje"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2"
                                    android:text="Embalaje"
                                    android:textSize="14sp" />

                                <CheckBox
                                    android:id="@+id/chkBox_pedidoAnticipo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2"
                                    android:text="Pedido por anticipo"
                                    android:textSize="14sp" />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Almacen Despacho"
                                    android:textSize="15sp" />

                                <Spinner
                                    android:id="@+id/spn_almacenDespacho"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    android:entries="@array/datos_spinner"
                                    android:spinnerMode="dialog" />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Condicion de Venta:"
                                    android:textSize="15sp" />

                                <Spinner
                                    android:id="@+id/spn_condicionVenta"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    android:entries="@array/datos_spinner" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    android:text="Aplica Descuento:"
                                    android:textSize="15sp" />

                                <RadioGroup
                                    android:id="@+id/rGroup_aplicaDescuento"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2.5"
                                    android:orientation="horizontal" >

                                    <RadioButton
                                        android:id="@+id/rButton_descuentoSi"
                                        android:layout_marginLeft="5dp"
                                        android:text="Si"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content" />

                                    <RadioButton
                                        android:id="@+id/rButton_descuentoNo"
                                        android:layout_marginLeft="5dp"
                                        android:checked="true"
                                        android:text="No"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content" />
                                </RadioGroup>
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Indicaciones:"
                                    android:textSize="15sp" />

                                <EditText
                                    android:id="@+id/edt_observacion1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Observación 2:"
                                    android:textSize="15sp" />

                                <EditText
                                    android:id="@+id/edt_observacion2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2.5"
                                    android:text="Observación 3:"
                                    android:textSize="15sp" />

                                <EditText
                                    android:id="@+id/edt_observacion3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    android:text="" />
                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ListView
                        android:id="@+id/lstProductos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/tv_mensaje"
                        android:divider="@color/brown_500"
                        android:dividerHeight="2dp" >
                    </ListView>
                    <TextView
                        android:id="@+id/tv_mensaje"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_above="@+id/view_line1"
                        android:background="@color/red_500"
                        android:text="IMPORTANTE: Es responsabilidad del Vendedor, inspeccionar el total de productos antes de generar la SCD"/>

                    <!-- ************************************************************** -->
                    <View android:layout_width="fill_parent" android:layout_height="1dp" android:background="@color/grey_700"
                        android:id="@+id/view_line1"
                        android:layout_above="@+id/linear_items"/>

                    <!-- ************************************************************** -->
                    <LinearLayout
                        android:id="@+id/linear_items"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:background="@color/grey_800"
                        android:orientation="horizontal">

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight=".5" android:gravity="center">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:textSize="@dimen/text_resumen_pedido" android:textColor="@color/grey_300"
                                android:text="Peso Kg:"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_peso"
                                android:textSize="@dimen/text_resumen_pedido" android:textColor="@color/white"
                                android:text="0.00"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight=".5">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:textSize="@dimen/text_resumen_pedido" android:textColor="@color/grey_300"
                                android:text="Total items:"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_cantidadItems"
                                android:textSize="@dimen/text_resumen_pedido" android:textColor="@color/white"
                                android:text="0"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <RelativeLayout
        android:id="@+id/pedidolyt_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="@color/color_transparent"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/pedido_lyt_btnAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableRight="@drawable/agregarv3"
            android:src="@drawable/agregarv3"
            android:text="Agregar"
            android:textSize="14dp"
            android:visibility="gone" />



    </RelativeLayout>

