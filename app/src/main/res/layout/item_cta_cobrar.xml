<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_50"
    android:orientation="horizontal"
    android:padding="5dip" >

    <TextView
        android:id="@+id/txt_view_tipo_documento"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:text="NOTA DE CREDITO"
        android:textColor="#555"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_numero_documento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_view_tipo_documento"
        android:layout_marginLeft="34dp"
        android:layout_toRightOf="@+id/txt_view_tipo_documento"
        android:text="001-1234567890"
        android:textColor="#555"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_view_tipo_documento"
        android:layout_below="@+id/txt_view_tipo_documento"
        android:text="EmisiÃ³n:"
        android:textColor="#555"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/txt_fecha_emision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_numero_documento"
        android:layout_toRightOf="@+id/textView2"
        android:paddingLeft="14px"
        android:text="24/11/2015"
        android:textColor="#555"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_fecha_emision"
        android:layout_alignBottom="@+id/txt_fecha_emision"
        android:layout_alignLeft="@+id/txt_numero_documento"
        android:text="Vencimiento:"
        android:textColor="#555"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/txt_fecha_vencimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:paddingLeft="14px"
        android:text="28/11/2015"
        android:textColor="#555"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/txt_total_documento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_fecha_emision"
        android:layout_alignTop="@+id/textView6"
        android:paddingLeft="14px"
        android:text="$1234678910"
        android:textColor="@color/blue_900"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_total_documento"
        android:layout_alignBottom="@+id/txt_total_documento"
        android:layout_alignLeft="@+id/textView4"
        android:text="Usuario:"
        android:textColor="#555"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtid_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_fecha_vencimiento"
        android:layout_below="@+id/textView2"
        android:paddingLeft="14px"
        android:text="VILCHEZ"
        android:textColor="#555"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_observacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/txt_total_documento"
        android:layout_toLeftOf="@+id/txtid_usuario"
        android:text="*ADMT. BCO DESCUENTO CREDITO 123 4567 89010 24545"
        android:textColor="#555"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/txtEstadoCobranza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_observacion"
        android:layout_alignBottom="@+id/txt_observacion"
        android:layout_alignLeft="@+id/txtid_usuario"
        android:paddingLeft="14px"
        android:text="ENTREGAR LT"
        android:textColor="#555"
        android:textSize="9sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txt_numero_documento"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="SALDO"
        android:textColor="#555"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_tipo_de_moneda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_fecha_vencimiento"
        android:layout_alignRight="@+id/txt_fecha_vencimiento"
        android:text="Dolares"
        android:textColor="#555"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_nroUnicoBanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_fecha_vencimiento"
        android:layout_alignBottom="@+id/lbl_nroUnicoBanco"
        android:paddingLeft="14px"
        android:text="----------"
        android:textColor="#555"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lbl_nroUnicoBanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/txt_observacion"
        android:text="Nro Unico:"
        android:textColor="#555"
        android:textSize="12sp" />

</RelativeLayout>