<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_50"
    android:orientation="horizontal"
    android:padding="5dip">


    <LinearLayout
        android:layout_below="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_cliente_iv_foto"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="@color/grey_800"
            android:src="@drawable/doc_detalle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_view_tipo_documento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="NOTA DE CREDITO "
                    android:textColor="#555"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_fecha_emision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emision: 24/11/2015"
                    android:textColor="#555"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txt_fecha_vencimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vencimiento: 28/11/2015"
                    android:textColor="#555"
                    android:textSize="11sp" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:id="@+id/txtTipoSaldo"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignLeft="@+id/textView2"
                       android:layout_below="@+id/textView2"
                       android:text="Deuda "
                       android:textColor="#555"
                       android:textSize="11sp"
                       android:textStyle="bold" />

                   <TextView
                       android:id="@+id/txt_total_documento"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_toRightOf="@+id/txtTipoSaldo"
                       android:layout_alignTop="@+id/txtTipoSaldo"
                       android:paddingLeft="14px"
                       android:text="$1515 "
                       android:textColor="@color/blue_900"
                       android:textSize="12sp"
                       android:textStyle="bold" />
               </LinearLayout>



                <TextView
                    android:id="@+id/txtEstadoVencimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Por vencer, vencido"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_observacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*Observacion Adicional"
                    android:textColor="#555"
                    android:textSize="9sp" />
            </LinearLayout>
            <LinearLayout
                android:paddingStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_numero_documento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="001-1234567890"
                    android:textColor="#555"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txt_tipo_de_moneda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dolares"
                    android:textColor="#555"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txtid_usuario"
                    android:backgroundTint="@color/red_100"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario: V62"
                    android:textColor="#555"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/txtEstadoCobranza"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo: ENTREGAR LT"
                    android:textColor="#555"
                    android:textSize="11sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_nroUnicoBanco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_observacion"
                    android:text="Numero unico: --- banco.---"
                    android:minLines="1"
                    android:maxLines="2"
                    android:textColor="#555"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>