<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/view_tipoProducto"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@color/black"
            android:gravity="center"
            android:padding="1dp"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_toRightOf="@+id/view_tipoProducto"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_descripcionD"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="3dp"
                android:text="Producto 1Proucto 1"
                android:textColor="@color/grey_900"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="@dimen/tittle_item_pedido_producto"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/imgCampanaYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="%"
                android:textColor="@color/orange_500"
                android:drawableEnd="@drawable/ic_campana_yellow"
                />
        </LinearLayout>


        
        <TextView
            android:id="@+id/tv_bonificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="B"
            android:textColor="@color/indigo_500"
            android:background="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textSize="@dimen/tittle_item_pedido_producto" />

        
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".35" >

            <TextView
                android:id="@+id/txtid_usuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Cantidad:"
                android:textSize="@dimen/text_item_pedido_producto" />

            <TextView
                android:id="@+id/tv_cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="xxxxx"
                android:textSize="@dimen/text_item_pedido_producto" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_weight=".37"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:minLines="1"
                android:text="Precio Unid:"
                android:textSize="@dimen/text_item_pedido_producto" />

            <TextView
                android:id="@+id/tv_cantidadDevolucion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="xxxxxx.xx"
                android:textSize="@dimen/text_item_pedido_producto" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Precio Lista:"
                android:textSize="@dimen/text_item_pedido_producto" />

            <TextView
                android:id="@+id/precioLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="xxxxxx.xx"
                android:textSize="@dimen/text_item_pedido_producto" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".28" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Desc:"
                android:textSize="@dimen/text_item_pedido_producto" />

            <TextView
                android:id="@+id/tv_descuentoPorcentaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="0% y 0%"
                android:textSize="@dimen/text_item_pedido_producto" />

        </LinearLayout>

    </LinearLayout>

    <!-- ........................................................ -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Precio Neto:"
                android:textSize="@dimen/text_item_pedido_producto" />

            <TextView
                android:id="@+id/precioUnitario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="xxxxxx.xx"
                android:textSize="@dimen/text_item_pedido_producto" />

            <!-- Oculto para bonificaiones -->

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio Venta: "
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_item_pedido_producto"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_precioVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxx.xx"
                android:textSize="@dimen/text_item_pedido_producto"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35" >

            <TextView
                android:id="@+id/txtEstadoCobranza"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:minLines="1"
                android:text="Sub Total:"
                android:textSize="@dimen/text_item_pedido_producto" />


            <TextView
                android:id="@+id/tv_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="xxxxxx.xx"
                android:textSize="@dimen/text_item_pedido_producto" />

            <TextView
                android:id="@+id/tv_serie"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="xxxxxx.xx"
                android:textSize="@dimen/text_item_pedido_producto" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".28" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Desc:"
                android:textSize="@dimen/text_item_pedido_producto" />

            <TextView
                android:id="@+id/tv_numero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="xxxxx"
                android:textStyle="bold"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/text_item_pedido_producto" />

        </LinearLayout>

        <!-- ....... solo sera visble cuando sea una bonificacion .......... -->

    </LinearLayout>
</RelativeLayout>