<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_100"
    android:orientation="horizontal"
     >

    <RelativeLayout
        android:id="@+id/containerItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_100"
        android:orientation="horizontal"
        android:padding="5dip" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prod_descripcion_comercial"
            android:text="prod:  "
            android:textColor="#10bcc9"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/prd_act_txtPrecio"
            android:text="S/."
            android:textColor="#343434"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/prd_act_txtPrecio"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:text="35.0099"
            android:textColor="#343434"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/prd_act_txtDescrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:maxLines="2"
            android:text="Producto XY asdasd asdasdasd asdasdasd adasdasd"
            android:textColor="#040404"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/prod_descripcion_comercial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prd_act_txtDescrp"
            android:maxLines="2"
            android:text="Desc. Comercial: Producto XY asdasd asdasdasd asdasdasd adasdasd"
            android:textColor="@color/grey_800"
            android:textSize="13sp"
            android:textStyle="bold"
            android:typeface="sans" />


        <TextView
            android:id="@+id/prd_act_txtCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prod_descripcion_comercial"
            android:layout_toRightOf="@+id/textView1"
            android:gravity="center_horizontal"
            android:text="23434"
            android:textColor="#10bcc9"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:text="prov:  "
            android:textColor="#10bcc9"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/prd_act_txtCodigoProveedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/prd_act_txtCodigo"
            android:layout_below="@+id/prd_act_txtCodigo"
            android:gravity="center_horizontal"
            android:text="00003"
            android:textColor="#10bcc9"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/prd_act_txtStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/producto_item_tvUnidad2"
            android:layout_alignBottom="@+id/producto_item_tvUnidad2"
            android:layout_alignParentRight="true"
            android:gravity="left"
            android:text="1000"
            android:textColor="#343434"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/producto_item_tvUnidad1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/prd_act_txtCodigoProveedor"
            android:layout_alignBottom="@+id/prd_act_txtCodigoProveedor"
            android:layout_alignRight="@+id/producto_item_tvUnidad2"
            android:text="Unidad"
            android:textColor="#343434"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/producto_item_tvUnidad2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/prd_act_txtCodigoProveedor"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/prd_act_txtStock"
            android:text="Cajas"
            android:textColor="#343434"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/producto_item_tvUnidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/producto_item_tvUnidad1"
            android:layout_alignBottom="@+id/producto_item_tvUnidad1"
            android:layout_alignParentRight="true"
            android:gravity="left"
            android:text="1000"
            android:textColor="#343434"
            android:textSize="14sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/containerItem"
        android:background="@color/grey_300"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>


</RelativeLayout> 