<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/teal_600"
            android:padding="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtFechaDesde"
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corners6"
                android:backgroundTint="@color/teal_A700"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:textColor="@color/white"
                android:textColorHint="@color/teal_100"
                android:singleLine="true"
                android:hint="Fecha de: "
                android:layout_marginEnd="2dp"
                android:text=""/>
            <TextView
                android:id="@+id/txtFechaHasta"
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corners6"
                android:backgroundTint="@color/teal_A700"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:textColor="@color/white"
                android:textColorHint="@color/teal_100"
                android:singleLine="true"
                android:hint="Fecha Hasta: "
                android:layout_marginEnd="2dp"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/teal_600"
            android:padding="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/_edtOrdenCompra"
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corners6"
                android:backgroundTint="@color/teal_A700"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textColorHint="@color/teal_100"
                android:singleLine="true"
                android:hint="Buscar coincidencias"
                android:text=""/>
            <ImageButton
                android:id="@+id/ibBuscarOrdenCompra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_A700"
                android:src="@drawable/ic_search_grey"
                android:tint="@color/white"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_below="@+id/l1"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/layoutBtn"
        android:layout_below="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/txt_cancelar"
            android:layout_marginEnd="2dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/red_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar"/>
    </LinearLayout>
</RelativeLayout>