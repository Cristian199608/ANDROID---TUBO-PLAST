<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ListView

        android:id="@+id/lv_reportes_depositos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/lv_reportes_depositos"
        android:background="@color/color_semi_transparente"
        android:layout_marginBottom="5dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rpt_depositos_txtTotal_dolares"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:gravity="left"
                android:textColor="#FFF"
                android:text="Total: $"/>

            <TextView
                android:id="@+id/rpt_depositos_txtTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:gravity="left"
                android:textColor="#FFF"
                android:text="Total:(S/.)"/>

        </LinearLayout>
        <ImageView
            android:background="@color/grey_600"
            android:onClick="poputMenu"
            android:id="@+id/poputMenu"
            android:src="@drawable/ic_tres_puntos_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


</RelativeLayout>