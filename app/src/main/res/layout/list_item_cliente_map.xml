<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingEnd="3dp"
    android:orientation="horizontal" >
    <LinearLayout
        android:background="@drawable/edittext_rounded_corners6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_flag_pedido"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/grey_600"
                android:text=" "/>

            <ImageView
                android:id="@+id/item_cliente_iv_foto"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="7dp"
                android:src="@drawable/icon_cliente_gris" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Nombre cliente completo"
                android:textColor="@color/primary_text"
                android:textSize="13sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tv_telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ruc"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/iten_direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="direccion"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/item_distancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dstancia en km"
                    android:textColor="@color/green_600"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_alignParentEnd="true"
                android:id="@+id/imgGoMaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ubicacion_grey"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                app:tint="@color/grey_600" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

