<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/edittext_rounded_corners6">

    <LinearLayout
        android:id="@+id/LayoutCabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tvComboPrductoInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:typeface="sans"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="codigo producto y descricpion"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#424246"
                        android:textStyle="bold"
                        android:text="Cant:"/>

                    <TextView
                        android:id="@+id/tvDet2ComboCantidad"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#424246"
                        android:text="10"/>


                    <TextView
                        android:id="@+id/tvDet2ComboUnidadMedida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#424246"
                        android:layout_marginStart="3dp"
                        android:text="(PAQUETE):"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#424246"
                            android:textStyle="bold"
                            android:text="P. Lista:"/>

                        <TextView
                            android:id="@+id/tvDet2PrecioLista"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#424246"
                            tools:text="10.855"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#424246"
                            android:textStyle="bold"
                            android:text="P. Neto:"/>

                        <TextView
                            android:id="@+id/tvDet2PrecioUnit"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#424246"
                            android:text="100.582"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#424246"
                        android:textStyle="bold"
                        android:text="Desc:"/>

                    <TextView
                        android:id="@+id/tvDet2DsctPctj"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#424246"
                        tools:text="10% + 5%"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#424246"
                        android:textStyle="bold"
                        android:text="PK($):"/>

                    <TextView
                        android:id="@+id/tvDet2PkDolar"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_height="wrap_content"
                        android:textColor="#424246"
                        android:textSize="13sp"
                        android:text="45.582"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#424246"
                        android:textStyle="bold"
                        android:text="Sub Total:"/>

                    <TextView
                        android:id="@+id/tvDet2SubTotal"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#424246"
                        android:text="145.582"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tvMensajeValidadoStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advertencia. El stock no esta valido en linea"
            android:imeOptions="actionSearch"
            android:textColor="@color/red_600"
            android:textSize="15sp" />

    </LinearLayout>


</LinearLayout>
