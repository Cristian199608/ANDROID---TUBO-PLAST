<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/custom_ripple"
        android:id="@+id/cardViewFechas"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="@dimen/cardviewElevation"
        card_view:cardUseCompatPadding="false"
        card_view:cardPreventCornerOverlap="false">
        <LinearLayout
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutRow"
                android:elevation="3dp"
                android:background="@color/teal_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical">

                <TextView
                    android:visibility="visible"
                    android:gravity="center|start"
                    android:padding="5dp"
                    android:id="@+id/tv_nomBreMes"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Nombre mes"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="19sp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Domingo"
                        android:textSize="15sp"
                        android:textColor="@color/red_500"
                        android:layout_weight="1"/>

                    <TextView
                        android:background="@color/blue_grey_300"
                        android:gravity="center"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:textSize="15sp"/>

                    <TextView
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Lunes"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:background="@color/blue_grey_300"
                        android:gravity="center"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>
                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Martes"
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>
                    <TextView
                        android:background="@color/blue_grey_300"
                        android:gravity="center"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/grey_300"
                        android:textSize="15sp"/>
                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Miercoles"
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>

                    <TextView
                        android:background="@color/blue_grey_300"
                        android:gravity="center"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/grey_300"
                        android:textSize="15sp"/>
                    <TextView

                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Jueves"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>

                    <TextView
                        android:background="@color/blue_grey_300"
                        android:gravity="center"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/grey_300"
                        android:textSize="15sp"/>
                    <TextView

                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Viernes"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>
                    <TextView
                        android:background="@color/blue_grey_300"
                        android:gravity="center"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/grey_300"
                        android:textSize="15sp"/>
                    <TextView

                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="SÃ¡bado"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="-2dp"
                android:id="@+id/recyclerViewDias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>





        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>