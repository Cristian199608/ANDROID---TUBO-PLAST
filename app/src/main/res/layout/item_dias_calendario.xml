<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/grey_200"
    android:layout_height="match_parent">
    <RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/layoutContainer"
        android:layout_margin="0.2dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="60dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_nro_dias"
            android:text="1"
            android:textSize="20sp"
            android:textColor="@color/grey_800"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/layoutCampo"
            android:layout_below="@+id/txt_nro_dias"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_cant_ejecutada"
                    android:text="1"
                    android:textSize="13sp"
                    android:textColor="@color/blue_500"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/txt_cant_proxima_visita"
                    android:text="1"
                    android:textSize="13sp"
                    android:textColor="@color/red_500"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <View
                android:background="@color/teal_500"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTaller"
            android:layout_below="@+id/layoutCampo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txt_programadaTaller"
                    android:text="1"
                    android:textSize="13sp"
                    android:textColor="@color/orange_700"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/txt_cant_cumpleano"
                    android:text="0"
                    android:textSize="13sp"
                    android:textColor="@color/pink_700"

                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <View
                android:background="@color/orange_600"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>