<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dp" >


    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_alignParentLeft="true"

        android:layout_marginRight="5dp">


        <TextView
            android:id="@+id/ingresos_tv_username"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Usuario"
            android:gravity="center_vertical"
            android:textColor="#999999"
            />

    </LinearLayout>

    <!-- Title Of Song-->
    <TextView
        android:id="@+id/ingresos_tv_acuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Total: 100 soles"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <!-- Artist Name -->
    <TextView
        android:id="@+id/ingresos_tv_saldo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingresos_tv_acuenta"
        android:textColor="#343434"
        android:textSize="12sp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Saldo: 50 soles"
        android:visibility="gone"/>

    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/ingresos_tv_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="12/12/12"
        android:layout_marginRight="5dip"
        android:textSize="12sp"
        android:textColor="#10bcc9"
        android:textStyle="bold"/>




    <!-- Rightend Arrow -->
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>