<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/ly_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/grey_900"
        android:clickable="true"
        android:gravity="top"
        android:orientation="vertical"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/iv_inicio"
            android:src="@drawable/logo_v5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/txt_te"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_inicio"
            android:layout_marginRight="11dp"
            android:layout_marginTop="4dp"
            android:text="(Sistema"
            android:textColor="@color/color_white"
            android:textSize="17sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/txt_te2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_inicio"
            android:layout_marginRight="78dp"
            android:layout_marginTop="54dp"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="17sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/txt_sae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_te"
            android:layout_alignParentTop="true"
            android:text="@string/lblSAE"
            android:textColor="@color/color_white"
            android:textSize="35sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/txt_te1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_inicio"
            android:layout_centerVertical="true"
            android:text="de administraciÃ³n \nEmpresarial"
            android:textColor="@color/color_white"
            android:textSize="17sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/menu_principal_txtFechaConfiguracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="dd/mm/YYYY"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_welcomeUser"
            android:layout_below="@+id/txt_te2"
            android:layout_toLeftOf="@+id/iv_inicio"
            android:layout_width="match_parent"
            android:paddingStart="5dp"
            android:layout_height="wrap_content"
            android:textColor="@color/green_600"
            android:textSize="20dp"
            android:elevation="4dp"
            android:text="Bienvenido vendedor"/>

    </RelativeLayout>

    <View android:id="@+id/view_tipoProducto"
        android:layout_width="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:layout_height="4dp"
        android:layout_below="@+id/ly_inicio">

    </View>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_below="@+id/view_tipoProducto"

        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="80dp"
            android:paddingBottom="100dp"

            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:id="@+id/ly_clientes"
                    android:background="@drawable/selector_cliente"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:focusable="true"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/iv_clientes"
                        android:src="@drawable/clientesv3"
                        android:visibility="invisible"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"/>



                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_clientes"
                        android:layout_alignTop="@+id/iv_clientes"
                        android:layout_alignRight="@+id/iv_clientes"
                        android:layout_alignBottom="@+id/iv_clientes"
                        android:typeface="sans"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Clientes"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ly_deposito"
                    android:background="@drawable/selector_depositos"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:focusable="true"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/iv_depositos"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:visibility="invisible"
                        android:src="@drawable/depositosv3" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_depositos"
                        android:layout_alignTop="@+id/iv_depositos"
                        android:layout_alignRight="@+id/iv_depositos"
                        android:layout_alignBottom="@+id/iv_depositos"
                        android:typeface="sans"
                        android:textSize="15sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/color_white"
                        android:text="Depositos"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/ly_agenda"
                    android:background="@drawable/selector_pedidos"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:focusable="true"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/iv_agendas"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:visibility="invisible"
                        android:src="@drawable/pedidosv3"
                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_agendas"
                        android:layout_alignTop="@+id/iv_agendas"
                        android:layout_alignRight="@+id/iv_agendas"
                        android:layout_alignBottom="@+id/iv_agendas"
                        android:typeface="sans"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Agenda"/>

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:id="@+id/ly_devoluciones"
                    android:background="@drawable/selector_devoluciones"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:focusable="true"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/iv_devoluciones"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:visibility="invisible"
                        android:src="@drawable/devolucionesv3"
                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_devoluciones"
                        android:layout_alignTop="@+id/iv_devoluciones"
                        android:layout_alignRight="@+id/iv_devoluciones"
                        android:layout_alignBottom="@+id/iv_devoluciones"
                        android:typeface="sans"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Devoluciones"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ly_productos"
                    android:background="@drawable/selector_producto"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:focusable="true"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/iv_productos"
                        android:visibility="invisible"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/productosv3"
                        />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_productos"
                        android:layout_alignTop="@+id/iv_productos"
                        android:layout_alignRight="@+id/iv_productos"
                        android:layout_alignBottom="@+id/iv_productos"
                        android:typeface="sans"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Productos"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/ly_estadisticas"
                    android:layout_margin="10dp"
                    android:background="@drawable/selector_estadisticas"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_estadisticas"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:visibility="invisible"
                        android:src="@drawable/estadistica_v6"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_estadisticas"
                        android:layout_alignTop="@+id/iv_estadisticas"
                        android:layout_alignRight="@+id/iv_estadisticas"
                        android:layout_alignBottom="@+id/iv_estadisticas"
                        android:typeface="sans"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Estadisticas"/>

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:id="@+id/ly_reportes"
                    android:layout_margin="10dp"
                    android:background="@drawable/selector_reportes"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_reportes"
                        android:layout_width="fill_parent"
                        android:scaleType="center"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:visibility="invisible"
                        android:src="@drawable/reportesv3"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_reportes"
                        android:layout_alignTop="@+id/iv_reportes"
                        android:layout_alignRight="@+id/iv_reportes"
                        android:layout_alignBottom="@+id/iv_reportes"
                        android:typeface="sans"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Reportes"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ly_cobranza"
                    android:layout_margin="10dp"
                    android:background="@drawable/selector_cobranza"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_cobranza"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:visibility="invisible"
                        android:src="@drawable/cobranzav3"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_cobranza"
                        android:layout_alignTop="@+id/iv_cobranza"
                        android:layout_alignRight="@+id/iv_cobranza"
                        android:layout_alignBottom="@+id/iv_cobranza"
                        android:typeface="sans"
                        android:layout_margin="1dp"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Cobranza"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/ly_sincronizar"
                    android:background="@drawable/selector_sincronizacion"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"

                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_sincronizar"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:visibility="invisible"
                        android:background="@drawable/sincronizarv3"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_sincronizar"
                        android:layout_alignTop="@+id/iv_sincronizar"
                        android:layout_alignRight="@+id/iv_sincronizar"
                        android:layout_alignBottom="@+id/iv_sincronizar"
                        android:typeface="sans"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/color_white"
                        android:text="Sincronizar"/>
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>